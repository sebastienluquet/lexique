<%= form_for :word, :url => words_path, :html => { :method => :get } do |f| %>
  <div class="field">
    <%= f.label :search %><br />
    <%= f.text_field :name %>
  </div>
<% end %>

<h1>Last words</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Definition</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.name %></td>
    <td><%= word.definition %></td>
    <td><%= link_to 'Show', word %></td>
  </tr>
<% end %>
</table>

